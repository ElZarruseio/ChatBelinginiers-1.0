<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
        <button class="btn btn-dark d-block d-lg-none" id="sidebarToggle">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand me-auto ms-3" href="/dashboard">ChatBelinginiers</a>
        <div class="d-flex align-items-center me-3">
            <span class="text-white me-2">Hola, <%= user.name %></span>
            <img src="/images/<%= user.image %>" class="rounded-circle user-avatar-small" alt="Mi Avatar">
        </div>
    </div>
</nav>

<style>
    /* Estilo para el avatar pequeño en la navbar */
    .user-avatar-small {
        width: 38px; /* Ajusta el tamaño según sea necesario */
        height: 38px;
        object-fit: cover;
        border: 2px solid rgba(255, 255, 255, 0.5);
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
    }

    /* Ocultar el botón del sidebar en pantallas grandes por defecto */
    @media (min-width: 992px) { /* breakpoint-lg */
        #sidebarToggle {
            display: none !important;
        }
    }
</style>

<script>
    // Script para la funcionalidad del botón de alternancia del sidebar en la navbar
    // Esto es para que funcione en pantallas pequeñas
    document.addEventListener('DOMContentLoaded', function() {
        var sidebarToggle = document.getElementById('sidebarToggle');
        var wrapper = document.getElementById('wrapper');

        if (sidebarToggle && wrapper) {
            sidebarToggle.addEventListener('click', function(e) {
                e.preventDefault();
                wrapper.classList.toggle('toggled');
            });
        }
    });
</script>