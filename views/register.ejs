<%- include('layouts/header') %>

<div class="form-container">
    <h1>Registro</h1>

    <% if (typeof message !== 'undefined' && message) { %>
        <p class="message-error"><%= message %></p>
    <% } %>

    <form action="/register" method="POST" enctype="multipart/form-data">
        <input type="text" class="form-control" name="name" placeholder="Nombre completo" required>
        <input type="email" class="form-control" name="email" placeholder="Correo electrónico" required>
        <input type="password" class="form-control" name="password" placeholder="Contraseña" required>

        <div class="file-input-wrapper">
            <input type="file" name="Image" id="imageUpload" accept="image/*">
            <label for="imageUpload" class="btn-upload">
                <i class="fas fa-camera"></i> <span>Seleccionar Imagen de Perfil</span>
            </label>
        </div>

        <button type="submit" class="btn btn-primary">Registrarse</button>
    </form>

    <a href="/" class="form-link">¿Ya tienes cuenta? Inicia sesión aquí</a>
</div>

<%- include('layouts/footer') %>